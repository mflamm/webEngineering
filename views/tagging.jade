include mixins
extends layout

block content
    script(type='text/javascript').

    body(style="padding-bottom:10rem;")
        .container
            .row
                .col-lg-12.col-sm-12.col-xs-12
                    +navbar("Web Engineering", "dropdown_menu")
                        +nav_item( "./") Home
                        +nav_item( "./tagging", "active") Tagging
                        +nav_item( "./discovery") Discover
            .row
                .col-lg-12.col-sm-12.col-xs-12
                        h2 Tagging a location

            .row
                .col-lg-4.col-sm-4.col-xs-4
                .col-lg-4.col-sm-4.col-xs-4
                    p: +input("text","tagName","e.g. HSKA","Name")
                    p: +input("text","hashtag","e.g. #crazy","Hashtag")
                    p: +a-btn-success("#") Tag this location
                .col-lg-4.col-sm-4.col-xs-4

    script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )